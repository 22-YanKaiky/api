generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  guid      String    @id @unique() @default(uuid()) @db.Uuid
  name      String
  last_name String?
  email     String    @unique
  password  String?   @db.Text
  admin     Boolean?  @default(false)
  image_url String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now()) @updatedAt
  deletedAt DateTime?

  UserAnimeFavorites UserAnimeFavorites[]
  UserMovieFavorites UserMovieFavorites[]
  UserSerieFavorites UserSerieFavorites[]

  @@map("users")
}

model Animes {
  guid         String    @id @unique() @default(uuid()) @db.Uuid
  name         String    @unique
  link         String?
  comming_soon Boolean
  date         DateTime?
  genre        String
  seasons      Int
  episodes     Int
  year         Int
  synopsis     String
  folder       String
  trailer      String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @default(now()) @updatedAt
  deletedAt    DateTime?

  UserAnimeFavorites UserAnimeFavorites[]
  @@map("animes")
}

model Movies {
  guid         String    @id @unique() @default(uuid()) @db.Uuid
  name         String    @unique
  link         String?
  comming_soon Boolean
  date         DateTime?
  genre        String
  time         String
  year         Int
  direction    String
  synopsis     String
  folder       String
  trailer      String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @default(now()) @updatedAt
  deletedAt    DateTime?

  UserMovieFavorites UserMovieFavorites[]
  @@map("movies")
}

model Series {
  guid         String    @id @unique() @default(uuid()) @db.Uuid
  name         String    @unique
  link         String?
  comming_soon Boolean
  date         DateTime?
  genre        String
  seasons      Int
  episodes     Int
  year         Int
  synopsis     String
  folder       String
  trailer      String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @default(now()) @updatedAt
  deletedAt    DateTime?

  UserSerieFavorites UserSerieFavorites[]
  @@map("series")
}

model UserAnimeFavorites {
  guid       String    @id @unique() @default(uuid()) @db.Uuid
  user_guid  String
  user       Users     @relation(fields: [user_guid], references: [guid])
  anime_guid String
  anime      Animes    @relation(fields: [anime_guid], references: [guid])
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @default(now()) @updatedAt
  deletedAt  DateTime?

  @@map("user_anime_favorites")
}

model UserMovieFavorites {
  guid       String    @id @unique() @default(uuid()) @db.Uuid
  user_guid  String
  user       Users     @relation(fields: [user_guid], references: [guid])
  movie_guid String
  movie      Movies    @relation(fields: [movie_guid], references: [guid])
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @default(now()) @updatedAt
  deletedAt  DateTime?

  @@map("user_movie_favorites")
}

model UserSerieFavorites {
  guid       String    @id @unique() @default(uuid()) @db.Uuid
  user_guid  String
  user       Users     @relation(fields: [user_guid], references: [guid])
  serie_guid String
  serie      Series    @relation(fields: [serie_guid], references: [guid])
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @default(now()) @updatedAt
  deletedAt  DateTime?

  @@map("user_serie_favorites")
}
